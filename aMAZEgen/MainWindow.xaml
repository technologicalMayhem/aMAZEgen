<Window x:Class="aMAZEgen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aMAZEgen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2" />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Content="Create Maze" Click="MakeMaze_OnClick" />
        <TextBox Name="LastChance" Grid.Row="1" Grid.Column="2" Width="50" Text="10"/>
        <TextBox Name="DecorChance" Grid.Row="1" Grid.Column="3" Width="50" Text="10"/>
        <Image Name="Image" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" />
    </Grid>
</Window>
